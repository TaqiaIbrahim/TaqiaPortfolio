@model IEnumerable<Service>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <a asp-action="AddOrEdit" class="btn btn-primary mb-3">Add</a>

            <h4 class="card-title">Services</h4>
            <br />
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.Id</td>
                                <td> @item.Name</td>
                                <td> @item.Description</td>
                             
                                <td>
                                   <a asp-action="AddOrEdit" class="btn btn-info" asp-route-id="@item.Id">Edit</a>
                                   <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

