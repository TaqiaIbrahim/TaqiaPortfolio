@model TaqiaPortFolio.Models.Skills
@{
    ViewData["Title"] = "Skills"; 
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Skills</h4>

            <form class="forms-sample" asp-action="AddOrEdit">
                <input type="hidden" asp-for="Id" />
                <div class="form-group row">
                    <label asp-for="Name" for="exampleInputUsername2" class="col-sm-3 col-form-label">Name</label>
                    <div class="col-sm-9">
                        <input asp-for="Name" type="text" class="form-control" id="exampleInputUsername2" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Precent" for="exampleInputDegree2" class="col-sm-3 col-form-label">Percent</label>
                    <div class="col-sm-9">
                        <input asp-for="Precent" type="text" class="form-control" id="exampleInputDegree2" placeholder="Percent">
                        <span asp-validation-for="Precent" class="text-danger"></span>
                    </div>
                </div>

                <button asp-action="AddOrEdit" type="submit" class="btn btn-primary mr-2"> Submit </button>
                <button asp-action="Index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>

